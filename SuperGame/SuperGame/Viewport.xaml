<UserControl x:Class="SuperGame.Viewport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SuperGame"
             mc:Ignorable="d" 
             Background="#FF4E97FF"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Canvas x:Name="MainCanvas"></Canvas>
        
        <Button Focusable="False" x:Name="ButtonLoad" Content="Load" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="90" Height="24" Click="ButtonLoad_Click"/>
        <Button Focusable="False" x:Name="ButtonSave" Content="Save" HorizontalAlignment="Left" Margin="105,10,0,0" VerticalAlignment="Top" Width="90" Height="24" Click="Button_Click"/>
        <Button Focusable="False" x:Name="ButtonCreate" Content="Default" HorizontalAlignment="Left" Margin="200,10,0,0" VerticalAlignment="Top" Width="90" Height="24" Click="ButtonCreate_Click"/>
    </Grid>
</UserControl>
